<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.konan.database.UserInfoMapper">
	<insert id="join" parameterType="UserInfo">
		insert into user_info values(#{user_id}, #{user_pw},#{email},#{name},#{phone_number},#{region},#{gender},sysdate,#{propic},(null))
	</insert>
	<select id = "idCheck" parameterType="String" resultType="UserInfo">
		select user_id from user_info where user_id = #{user_id}
	</select>
	<select id="login" parameterType="UserInfo" resultType ="UserInfo">
		select user_id, user_pw from user_info where user_id = #{user_id} and user_pw = #{user_pw}
	</select>
	<select id="selectFollower" parameterType="String" resultType="UserInfo">
        select target_id from user_following where user_id=#{user_id} 
    </select>
</mapper>