<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.konan.database.PostMapper">
	
	<!-- 커뮤니티 포스팅 목록 조회 -->
	<select id="selectPost" resultType="Post">
		select * from post where post_type='C'
	</select>
	
	<!-- 질문 포스팅 목록 조회 -->
	<select id="selectQpost" resultType="Post">
		select * from post where post_type='Q'
	</select>
	
	<!-- 커뮤니티 포스팅 개수 세기 -->
	<select id="postCount">
		select count(*) from post where post_type='C'
	</select>
	
	<!-- 질문 포스팅 개수 세기 -->
	<select id="qpostCount">
		select count(*) from post where post_type='Q'
	</select>
	
	<!-- 답변 개수 세기 -->
	<select id="ansCount" parameterType="BigDecimal">
		select count(*) from post where question_id={question_id}
	</select>
	
	
	<insert id="insert" parameterType="Post">
		insert into post values(post_id_seq.NEXTVAL, #{question_id}, #{post_type}, #{user_id}, #{title}, #{post_content}, #{is_rewrite}, sysdate, #{report_cnt}, 'F', #{is_anonymous})
	</insert>
	
	<select id="selectOne" parameterType="int" resultType="Post">
		select * from post where post_id = #{post_id}
	</select>
</mapper>